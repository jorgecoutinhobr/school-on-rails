<section class="dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 mx-auto md:h-1/3 lg:py-0">
    <!-- 
    <a href="#" class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
      <%= image_tag 'ruby.png', alt: 'Logo Ruby', class: 'w-8 h-8 mr-2' %>
      School on Rails    
    </a> 
    -->
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 md:max-w-2xl xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-12 space-y-4 md:space-y-6 sm:p-12">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
         <%= title %>
        </h1>
        <%= form_with(model: user, class: 'space-y-4 md:space-y-6') do |f| %>
          <% if action_name == 'edit' %>
            <div>
              <%= f.label :email, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
              <%= f.email_field :email, required: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
            </div>
            <div>
              <%= f.label :password, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
              <%= f.password_field :password, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
            </div>
            <div>
              <%= f.label :password_confirmation, class: 'block text-sm font-medium text-gray-900 dark:text-white' %><br>
              <%= f.password_field :password_confirmation, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
            </div>
          <% end %>
          <div class="flex space-x-4">
            <div class="flex-1">
              <%= f.label :first_name, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
              <%= f.text_field :first_name, required: true, autocomplete: "email", class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
            </div>
            <div class="flex-1">
              <%= f.label :last_name, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
              <%= f.text_field :last_name, required: true, autocomplete: "current-password", class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
            </div>
          </div>
          <div>
            <%= f.label :cpf, "CPF" ,class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
            <%= f.text_field :cpf, required: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
          </div>
          <div>
            <%= f.label :birthdate, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
            <%= f.date_field :birthdate, required: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
          </div>
          <div>
            <%= f.label :phone, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
            <%= f.text_field :phone, required: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
          </div>
           <%= f.fields_for :address do |address_form| %>
            <div>
              <%= address_form.label :street, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
              <%= address_form.text_field :street, required: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
            </div>
            <div>
              <%= address_form.label :city, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
              <%= address_form.text_field :city, required: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
            </div>
            <div>
              <%= address_form.label :state, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
              <%= address_form.text_field :state, required: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
            </div>
            <div>
              <%= address_form.label :country, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
              <%= address_form.text_field :country, required: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
            </div>
            <div>
              <%= address_form.label :zip_code, class: 'block text-sm mb-2 font-medium text-gray-900 dark:text-white' %>
              <%= address_form.text_field :zip_code, required: true, class: 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' %>
            </div>
          <% end %>

          <%= f.submit 'Submit', class: 'btn btn-full btn-blue' %>
        <% end %>
      </div>
    </div>
  </div>
</section>


